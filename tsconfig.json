{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "build",
    "rootDir": "sections",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
